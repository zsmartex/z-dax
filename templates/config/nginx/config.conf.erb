# Default server configuration
#

user root;
worker_processes  4;

error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;

events {
  worker_connections  1024;
}

http {
  include /etc/nginx/mime.types;

  default_type application.octet-stream;
  log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';
  access_log /var/log/nginx/access.log main;

  sendfile on;
  keepalive_timeout 65;

  include /etc/nginx/conf.d/*.conf;

  server {
    server_name <%= @config['app']['subdomain'] %>.<%= @config['app']['domain'] %>
    listen       80;
    
    # Get the actual IP of the client through load balancer in the logs
    real_ip_header     X-Forwarded-For;
    set_real_ip_from   0.0.0.0/0;

    # X-Frame-Options is to prevent from clickJacking attack
    add_header X-Frame-Options SAMEORIGIN;
    
    # disable content-type sniffing on some browsers.
    add_header X-Content-Type-Options nosniff;
    
    # This header enables the Cross-site scripting (XSS) filter
    add_header X-XSS-Protection "1; mode=block";

    add_header Strict-Transport-Security "max-age=31536000; includeSubdomains;";
    
    add_header Referrer-Policy "no-referrer-when-downgrade";
    
    # Enables response header of "Vary: Accept-Encoding"
    gzip_vary on;

    root /var/www/html;
    
    index index.html;

    location / {
      try_files $uri $uri/ /index.html;

      # kill cache
      add_header Last-Modified $date_gmt;
      add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
      if_modified_since off;
      expires off;
      etag off;

      # don't cache it
      proxy_no_cache 1;
      # even if cached, don't try to use it
      proxy_cache_bypass 1; 
    }

    location /castle {
      try_files $uri $uri/ /castle/index.html;

      # kill cache
      add_header Last-Modified $date_gmt;
      add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
      if_modified_since off;
      expires off;
      etag off;

      # don't cache it
      proxy_no_cache 1;
      # even if cached, don't try to use it
      proxy_cache_bypass 1; 
    }

    location /assets-currency {
      try_files $uri $uri/ /assets-currency/index.html;

      # kill cache
      add_header Last-Modified $date_gmt;
      add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
      if_modified_since off;
      expires off;
      etag off;

      # don't cache it
      proxy_no_cache 1;
      # even if cached, don't try to use it
      proxy_cache_bypass 1; 
    }
	}
}
