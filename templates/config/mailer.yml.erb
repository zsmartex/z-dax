keychain:
  barong:
    algorithm: RS256
    value: "<%= @jwt_public_key %>"
  peatio:
    algorithm: RS256
    value: "<%= @jwt_public_key %>"

topics:
  barong_system:
    name: barong.events.system
    signer: barong
  barong_model:
    name: barong.events.model
    signer: barong
  peatio:
    name: peatio.events.model
    signer: peatio

events:
